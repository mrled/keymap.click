{
  "compilerOptions": {
    "target": "es2016",
    "module": "es6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "lib": [
      "ES2016",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "rootDir": "./src",
    "typeRoots": ["./src/types"],
    "paths": {
      "~/*": [
        "src/*"
      ]
    },

    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "./dist/types",

  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.cjs",
  ],
  "exclude": [
    "node_modules"
  ],
}
